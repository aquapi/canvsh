{
    // Change this to match your project
    "include": [
        "src/**/*"  
    ],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "outDir": "lib",
        "esModuleInterop": true,
        "declarationDir": "types",
        "target": "ESNext",
        "emitDeclarationOnly": true,
        "lib": [
            "esnext",
            "DOM",
            "es2022"
        ],
        "types": ["@types/node"],
        "allowUmdGlobalAccess": true
    }
}